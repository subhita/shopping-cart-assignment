<section class="product">
    <div class="product__container">
        <div class="product__container__list">
            <ul id="menu">
                <input id="check01" type="checkbox" name="menu" />
                <label for="check01">Product Menu</label>
                <ul class="submenu" role="group" aria-expanded="true">
                    {{#each categories}}
                    <li role="treeitem" aria-expanded="false">
                        <a href="/products/{{this.id}}" class="active">{{this.name}}</a>
                    </li>
                    {{/each}}
                </ul>
            </ul>
        </div>
        <div class="product__container__item">
            <div class="product__container__item__col">
                {{#each products}}
                <div class="product__container__list__item">
                    <h5 tabindex="0">{{ this.name }}</h5>
                    <div class="pl__list">
                        <img src="{{this.imageURL}}" alt="{{this.description}}" class="pl__list__item" tabindex="0">
                        <p tabindex="0">{{this.description}}</p>
                        <div class="item__price">
                            <button class="btn plp-cart-buy__btn" role="button" id={{this.id}}>Buy Now<span>MRP
                                    Rs{{this.price}}</span></button>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</section>
<script type="text/javascript" src="/js/product.js"></script>