
    <section class="home__section" tabindex="0">
        <div class="slideshow-container">
            <div class="mySlides fade" id="slider">
            {{#each banners}}
                        <img src="{{this.bannerImageUrl}}" alt="{{this.bannerImageAlt}}" class="sale" style="width:100%">
                    {{/each}}
            </div>
            <a class="prev" role="button" title="previous" onclick="plusSlides(-1)">&#10094;</a>
            <a class="next" role="button" title="next" onclick="plusSlides(1)">&#10095;</a>
            <div class="banners">
                 {{#each banners}}
                  <span class="dot" onclick="currentDiv({{math @index "+" 1}})"></span>
                 {{/each}}
            </div>
        </div>
    </section>
    <div id="category__id">
     {{#each categories}}
        <section class="home__section" >
            <div class="row">
                <div class="product__box">
                    <figure>
                        <img src="{{this.imageUrl}}" alt="{{this.name}}" class="product__items" tabindex="0">
                    </figure>
                </div>
                <div class="product__content" >
                    <h2 tabindex="0">{{this.name}}</h2>
                    <p tabindex="0">{{this.description}}</p>
                    <button>Explore {{this.key}}</button>
                </div>
            </div>
        </section>
        
    {{/each}}
    </div>




<script>
    var slideIndex = 1;
    showDivs(slideIndex);
    function plusSlides(n) {
        showDivs(slideIndex += n);
    }
    function currentDiv(n) {
        showDivs(slideIndex = n);
    }
    function showDivs(n) {
        var i;
        var x = document.getElementsByClassName("sale");
        var dots = document.getElementsByClassName("dot");
        if (n > x.length) {slideIndex = 1}
        if (n < 1) {slideIndex = x.length}
        for (i = 0; i < x.length; i++) {
        x[i].style.display = "none";  
        }
        for (i = 0; i < dots.length; i++) {
        dots[i].className = dots[i].className.replace(" slide-white", "");
        }
        x[slideIndex-1].style.display = "block";  
        dots[slideIndex-1].className += " slide-white";
    }

</script>
