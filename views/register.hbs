<section class="sign__section">
    <div class="sign__in__container">
        <div class="sign__in__content" tabindex="0">
            <h2>Signup</h2>
            <p>We do not share your personal details with anyone.</p>
        </div>
        <div class="sign__in__form">
            <form>
                 {{#each registerData}}
                <div class="form__input">
                    <input type="{{type}}" name="{{label}}" required>
                    <label>{{label}}</label>
                </div>
                {{/each}}
                <div class="form__input">
                    <button>Signup</button>
                </div>
            </form>
        </div>
    </div>
</section>